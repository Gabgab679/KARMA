  <% unless current_user.events || current_user.events_participations %> <!-- A moins que l'un des deux ne soit vrai -->
    <h2 class="karma-container pt-1"> No upcoming events, register to one or create a new event !</h2>
    <div class="karma-container" >
       <%= link_to "Create an event", new_event_path, class: "register-button" %>
     </div>
  <% else %>
  <% unless current_user.events_participations %>
   <h6 class="karma-container pt-1">  You're not registered to any events! <h6>
  <% else %>
    <div>
      <h2 class="karma-container pt-1"> Events you've created </h2>
      <%= render "shared/cards-events", events: current_user.events_participations %>
      <div class="karma-container">
       <%= link_to "Create an event", new_event_path, class: "register-button" %>
     </div>
    </div>
  <% end %>
  <% unless current_user.events %>
     <h2 class="karma-container pt-1"> Create a new event </h2>
  <% else %>
    <% if @pending_request.any? %>
      <div class="participation">
      <p>Accept <%= @pending_request.first.user.username %>'s participation</p>
        <div>
          <div>
            <%= button_to "Accept", event_participation_path(@pending_request.first.event, @pending_request.first.id), method: :patch %>
            <%= button_to "Decline", event_participation_path(@pending_request.first.event, @pending_request.first.id), method: :delete %>
          </div>
        </div>

      <!-- Ajouter la participation num 1: -->
      </div>
    <% else %>
     <h6 class="karma-container pt-1"> You'll have new participations soon enough ! 🤞 </h6>
    <% end %>

    <p> Events you've created </p>
    <%= render "shared/cards-events", events: current_user.events %>
  <% end %>
  <% end %> <!-- Cas l'utilisateur n'a pas crée d'évènements-->
  <!-- Cas l'utilisateur ne participe à aucun événements -->
