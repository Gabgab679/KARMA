<div class="container chatroom"
  data-controller="event-subscription"
  data-event-subscription-event-id-value="<%= @event.id %>">

  <h1>Chat with participants of <%= @event.name %></h1>

  <div class="messages" data-event-subscription-target="messages">
    <% if @messages %>
      <% @event.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    <% end %>
    </div>

    <%= simple_form_for [@event, @message],
      html: { data: {"event-subscription-target": "form", action: "turbo:submit-end->event-subscription#resetForm" }, class: "d-flex" } do |f|
    %>
      <%= f.input :content,
        label: false,
        placeholder: "Write a message",
        wrapper_html: {class: "flex-grow-1"}
      %>
      <div class="position-relative">
        <%= f.submit "Send", class: "btn btn-primary", style: "background-color: #f72585; border-color: #f72585" %>
      </div>
    <% end %>
</div>
