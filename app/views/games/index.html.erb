<div class="row">
  <% @games.each do |game| %>
    <div class="col-3">
      <div class="card h-100">
        <%= game.image_url ? image_tag(game.image_url) : image_tag("https://c.clc2l.com/t/m/o/monopoly-cgwI69.png") %>
        <div class="card-body">
          <h2 class="card-title"><%= game.name %></h2>
          <p class="card-text"><%= game.description %></p>
          <button type="button" class="btn btn-outline-warning">Add to favorites</button>
        </div>
      </div>
    </div>
    <% end %>
</div>
