<% unless controller_name == 'devise' || action_name == "home" ||  (@event = Event.find_by(id: params[:event_id])) && request.path == event_messages_path(@event) %>
    <footer class="footer">
      <nav class="footer-nav">
        <div class="footer-icon <%= "current-page-indicator" if action_name == "map" && controller_name == "pages" %>">
          <%= link_to "/map" do %>
            <%= image_tag('icone-maps.png') %>
          <% end %>
        </div>
        <div class="footer-icon <%= "current-page-indicator" if action_name == "index" && controller_name == "events" %>">
          <%= link_to events_path do %>
            <%= image_tag('icone-home.png') %>
          <% end %>
        </div>
        <div class="footer-icon <%= "current-page-indicator" if action_name == "user_events" && controller_name == "pages" %>">
          <%= link_to "/my_events" do %>
            <%= image_tag('icone-evenement.png') %>
          <% end %>
        </div>
        <div class="footer-icon <%= "current-page-indicator" if action_name == "chatrooms" && controller_name == "pages" %>">
          <%= link_to "/chatrooms" do %>
            <%= image_tag('icone-chat.png') %>
          <% end %>
        </div>
      </nav>
    </footer>
<% end %>
