         <div class="w-100 d-flex justify-content-end" data-favorites-target="card">
          <% if current_user.games.include?(game) %>
            <%= button_to "ðŸ§¡", favorite_path(game), method: :delete, data: { action: "click->favorites#remove" }, notice: "Favorite removed" %>
          <% else %>
            <%= button_to "ðŸ–¤", favorite_path(game), method: :post, data: { action: "click->favorites#add" } %>
          <% end %>
        </div>
          <h2> <%= game.name %></h2>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
