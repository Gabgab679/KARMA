<h6 class="karma-container">Join Request</h6>
<div style="width: 100vw; overflow: hidden">
  <div class="d-flex w-40" style="flex-wrap: nowrap; overflow-x: scroll;">
    <% @pending_request.each do |pending_request| %>
      <div class="karma-container flex-shrink-0 p-3 pt-0" style="border: solide #F72585; width: 387px">
        <div class="d-flex" style="border: solid #F72585;border-radius: 10px;">
          <img src="<%= pending_request.event.game.image_url %>" alt="" style="width: 33.33%; height: 150px; object-fit: cover; object-position: center">
          <div class="p-2" style="width: 65%">

            <div class="p-1">
              <%# nom de l'envent %>
              <%= pending_request.event.name %>
            </div>

            <div class="d-flex p-1">
              <%# avater du la personne ne pas oubliÃ© de mettre la condition si  %>
                <% if pending_request.user.photo.attached? %>
                  <%= cl_image_tag pending_request.user.photo.key, crop: :fill_pad, class: "avatar"%>
                <% else %>
                <img class="avatar rounded-circle" style=" margin-right: 10px;" src="https://cdn-icons-png.flaticon.com/512/1178/1178882.png">
                <% end %>
              <%# accepte nom + participation %>
              <p style="margin: auto"> <%= pending_request.user.username %>'s participation</p>
            </div>

            <div class="d-flex p-1" style=" justify-content: space-between">
              <%= button_to "Accept", event_participation_path(pending_request.event, pending_request.id), method: :patch, class: "karma-button-accepte",  style: "width: 47%%;"%>
              <%= button_to "Decline", event_participation_path(pending_request.event, pending_request.id), method: :delete, class: "karma-button-decline", style: "width: 47%%;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
