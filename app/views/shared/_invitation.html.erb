<div class="karma-container" style="border: solide #F72585;">
  <div class="d-flex" style="border: solid #F72585;border-radius: 10px;">
    <img src="<%= @pending_request.first.event.game.image_url %>" alt="" style="width: 33.33%; height: 150px; object-fit: cover; object-position: center">
    <div class="p-2" style="width: 65%">

      <div class="p-1">
        <%# nom de l'envent %>
        <%= @pending_request.first.event.name %>
      </div>

      <div class="d-flex p-1">
        <%# avater du la personne ne pas oubliÃ© de mettre la condition si  %>
          <% if @pending_request.first.user.photo.attached? %>
            <%= cl_image_tag @pending_request.first.user.photo, crop: :fill_pad, class: "avatar rounded-circle"%>
          <% else %>
          <img class="avatar rounded-circle" style=" margin-right: 10px;" src="https://cdn-icons-png.flaticon.com/512/1178/1178882.png"></img>
          <% end %>
        <%# accepte nom + participation %>
        <p style="margin: auto">Accept <%= @pending_request.first.user.username %>'s participation</p>
      </div>

      <div class="d-flex p-1" style=" justify-content: space-between">
        <%= button_to "Accept", event_participation_path(@pending_request.first.event, @pending_request.first.id), method: :patch, class: "karma-button-accepte",  style: "width: 47%%;"%>
        <%= button_to "Decline", event_participation_path(@pending_request.first.event, @pending_request.first.id), method: :delete, class: "karma-button-decline", style: "width: 47%%;" %>
      </div>
    </div>
  </div>
</div>
