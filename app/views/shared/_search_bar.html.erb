<div class="row justify-content-center">
  <div class="col-sm-8 my-3">

    <%= form_with url: events_path, method: :get, class: "d-flex" do %>
    <%# search-bar pour chercher les string event.name ET game.name%>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type an event name and/or game name"
        %>

        <%# search-bar pour filtrer sur event-type => à transfo en bouton de filtre %>
        <%= text_field_tag :event_type,
            params[:event_type],
            class: "form-control",
            placeholder: "event-type"
        %>

        <%# search-bar pour filtrer sur la date => à transfo en bouton de filtre %>
        <%= text_field_tag :date,
            params[:date],
            class: "form-control",
            placeholder: "date"
        %>

        <%# search-bar pour filtrer sur un rayon de ...km => à transfo en bouton de filtre %>
        <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "location"
        %>

      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
